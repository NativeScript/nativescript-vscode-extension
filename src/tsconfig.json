{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "../out",
        "allowJs": true
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "./tests/**/*.ts",
        "./debug-adapter/nativeScriptDebug.ts",
        "./main.ts",
        "custom-typings/universal-analytics/ua.d.ts"
    ]
}